@model IEnumerable<SystemKnowledgeMVC.Models.AreaOfKnowledge>

@{
    ViewBag.Title = "Search By Name Of Area With Description";
}

<h2>Search By Name Of Area With Description</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("SearchByNameOfAreaWithDescription", "AreaOfKnowledges", FormMethod.Get))
    {
    <p>
        Genre: @Html.DropDownList("areaOfKnowledgeName", "All")
        Title: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
}

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AreaOfKnowledgeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AreaOfKnowledgeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AreaOfKnowledgeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AreaOfKnowledgeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AreaOfKnowledgeID })
                </td>
            </tr>
        }

    </table>


